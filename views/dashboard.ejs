          </nav>

          <h1 class="main-heading" id="heading">Missions</h1>
          <div class="container">
            <% for(var i = 0; i <= details.length; i++) { %>
              <div class="card">
                  <% if (details[i] !== undefined) { %>
                      <div class="task">
                          <h1 class="main-heading"><span class="special-text">Name:</span> <%= details[i].mission %></h1>
                          <h1 class="heading-sub"><span class="special-text">Date:</span> </h1>
                      </div>
                      <div class="creds">
                          <h1 class="main-heading"><span class="special-text">Agent:</span>  <%= details[i].name %></h1>
                          <h1 class="heading-sub"><span class="special-text">Progress:</span> In progress</h1>
                      </div>
                      <% } %>
                  </div>
                  <% } %>
                </div>
              </div>
</body>
</html>